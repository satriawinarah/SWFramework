<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.javasoul.swframework.component.SWEditText
        android:id="@+id/txt_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Title Test"
        app:description="This is description"
        app:warning="This is warning"
        app:error="This is error"
        app:placeholder="Edit text placeholder"
        />

    <Spinner
        android:id="@+id/cmb_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/btn_change"
        android:text="Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>